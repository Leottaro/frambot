{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "build",
        "strict": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,

        "allowUnreachableCode": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false
    },
    "include": ["src"],
    "exclude": ["build", "node_modules", ".github"]
}
